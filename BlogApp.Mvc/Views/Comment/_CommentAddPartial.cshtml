@model BlogApp.Entities.Dtos.CommentDtos.CommentAddDto

<div class="card my-4">
    <h5 class="card-header">Leave a Comment:</h5>
    <div class="card-body form-card">
        <form asp-controller="Comment" asp-action="Add" method="post" id="form-comment-add">
            <div asp-validation-summary="All" id="validation-summary" style="display: none;" aria-hidden="true"></div>
            <input type="hidden" name="IsValid" id="IsValid" value="@ViewData.ModelState.IsValid.ToString()" aria-hidden="true">
            <input type="hidden" asp-for="ArticleId">

            <div class="form-group">
                <label asp-for="CreatedByName" class="form-text"></label>
                <input type="text" asp-for="CreatedByName" class="form-control">
            </div>

            <div class="form-group">
                <textarea class="form-control" rows="3" asp-for="Text"></textarea>
            </div>

            <button type="submit" class="btn btn-primary" id="btnSave">Submit</button>
        </form>
    </div>
</div>