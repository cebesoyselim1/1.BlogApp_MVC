@model BlogApp.Mvc.Models.ArticleDetailRightSideBarViewModel

<!-- Sidebar Widgets Column -->
<div class="col-md-4">

    <div class="card my-4">
        <img src="~/img/@Model.User.Picture" alt="@Model.User.UserName" style="max-width: 100px;" class="my-1 image-thumbnail">
        <h5 class="card-header text-center">@Model.User.UserName</h5>
        <div class="card-body">
            <p class="card-text text-center">@Model.User.About</p>
        </div>
        <div class="card-footer text-center">
            <p>Social Media Links</p>
            @if(Model.User.LinkedInLink != null){
                <a href="@Model.User.LinkedInLink" class="fab fa-linkedin"></a>
            }
            @if(Model.User.GitHubLink != null){
                <a href="@Model.User.GitHubLink" class="fab fa-github-square"></a>
            }
            @if(Model.User.TwitterLink != null){
                <a href="@Model.User.TwitterLink" class="fab fa-twitter-square"></a>
            }
            @if(Model.User.FacebookLink != null){
                <a href="@Model.User.FacebookLink" class="fab fa-facebook-square"></a>
            }
            @if(Model.User.InstagramLink != null){
                <a href="@Model.User.InstagramLink" class="fab fa-instagram-square"></a>
            }
            @if(Model.User.YoutubeLink != null){
                <a href="@Model.User.YoutubeLink" class="fab fa-youtube-square"></a>
            }
            @if(Model.User.WebsiteLink != null){
                <a href="@Model.User.WebsiteLink" class="fas fa-home"></a>
            }
        </div>
    </div>

    <!-- Side Widget -->
    <div class="card my-4">
        <h5 class="card-header">@Model.Header</h5>
        <div class="card-body">
            <div class="row">
                <div class="col-lg-12">
                    <ul class="list-group">
                        @for (int i = 0; i < Model.ArticleListDto.Articles.Count; i++)
                        {
                            @if (i % 2 == 0)
                            {
                                <li class="list-group-item list-group-item-primary">
                                    <a asp-controller="Article" asp-action="Detail"
                                asp-route-articleId="@Model.ArticleListDto.Articles[i].Id">@Model.ArticleListDto.Articles[i].Title</a>
                                </li>
                            }
                            else
                            {
                                <li class="list-group-item list-group-item-info">
                                    <a asp-controller="Article" asp-action="Detail"
                                asp-route-articleId="@Model.ArticleListDto.Articles[i].Id">@Model.ArticleListDto.Articles[i].Title</a>
                                </li>
                            }
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>

</div>