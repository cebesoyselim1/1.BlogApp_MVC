@model BlogApp.Entities.Dtos.UserDtos.UserAddDto
<div class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><span class="fas fa-plus"></span> Add User</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Ä°ptal">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form asp-action="Add" id="form-user-add">
                    <input name="IsValid" type="hidden" value="@ViewData.ModelState.IsValid.ToString()" />
                    <div asp-validation-summary="All" class="text-danger" id="validation-summary" aria-hidden="true" style="display: none;"></div>
                    <div class="form-row">
                    <div class="form-group col-md-6">
                        <label asp-for="UserName"></label>
                        <input class="form-control" asp-for="UserName" placeholder="Please, enter your username."/>
                        <span class="text-danger" asp-validation-for="UserName"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="Email"></label>
                        <input type="email" class="form-control" asp-for="Email" placeholder="Please, enter your email."/>
                        <span class="text-danger" asp-validation-for="Email"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="Password"></label>
                        <input type="password" class="form-control" asp-for="Password" placeholder="Please, enter your password."/>
                        <span class="text-danger" asp-validation-for="Password"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="PhoneNumber"></label>
                        <input type="text" class="form-control" asp-for="PhoneNumber" placeholder="Please, enter your phone number."/>
                        <span class="text-danger" asp-validation-for="PhoneNumber"></span>
                    </div>
                        <div class="form-group col-md-6">
                        <label asp-for="FirstName"></label>
                        <input type="text" class="form-control" asp-for="FirstName" placeholder="Please, enter your name."/>
                        <span class="text-danger" asp-validation-for="FirstName"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="LastName"></label>
                        <input type="text" class="form-control" asp-for="LastName" placeholder="Please, enter your surname."/>
                        <span class="text-danger" asp-validation-for="LastName"></span>
                    </div>
                    <div class="form-group col-md-12">
                        <label asp-for="About"></label>
                        <textarea class="form-control" asp-for="About" placeholder="Please, anter a sentence which is about of you." rows="4"></textarea>
                        <span class="text-danger" asp-validation-for="About"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="TwitterLink"></label>
                        <input type="text" class="form-control" asp-for="TwitterLink" placeholder="Please, enter yout twitter profile."/>
                        <span class="text-danger" asp-validation-for="TwitterLink"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="FacebookLink"></label>
                        <input type="text" class="form-control" asp-for="FacebookLink" placeholder="Please, enter your facebook profile."/>
                        <span class="text-danger" asp-validation-for="FacebookLink"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="InstagramLink"></label>
                        <input type="text" class="form-control" asp-for="InstagramLink" placeholder="Please, enter your instagram profile."/>
                        <span class="text-danger" asp-validation-for="InstagramLink"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="LinkedInLink"></label>
                        <input type="text" class="form-control" asp-for="LinkedInLink" placeholder="Please, enter your linkedn profile."/>
                        <span class="text-danger" asp-validation-for="LinkedInLink"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="YoutubeLink"></label>
                        <input type="text" class="form-control" asp-for="YoutubeLink" placeholder="Please, enter your youtube profile."/>
                        <span class="text-danger" asp-validation-for="YoutubeLink"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="GitHubLink"></label>
                        <input type="text" class="form-control" asp-for="GitHubLink" placeholder="Please, enter your github profile."/>
                        <span class="text-danger" asp-validation-for="GitHubLink"></span>
                    </div>
                        <div class="form-group col-md-6">
                            <label asp-for="WebsiteLink"></label>
                            <input type="text" class="form-control" asp-for="WebsiteLink" placeholder="Please, enter your website link."/>
                            <span class="text-danger" asp-validation-for="WebsiteLink"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="PictureFile"></label>
                            <input type="file" accept="image/*" class="form-control-file" asp-for="PictureFile"/>
                            <span class="text-danger" asp-validation-for="PictureFile"></span>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger btn-block" data-dismiss="modal"><span class="fas fa-times"></span> Cancel</button>
                <button type="button" class="btn btn-primary btn-block" id="btnSave"><span class="fas fa-save"></span> Save</button>
            </div>
        </div>
    </div>
</div>
