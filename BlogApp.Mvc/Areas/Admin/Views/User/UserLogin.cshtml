@model BlogApp.Entities.Dtos.UserDtos.UserLoginDto
@{
    Layout = "_UserLoginLayout";
    ViewBag.Title = "Login";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-5">
            <div class="card shadow-lg border-0 rounded-lg mt-5">
                <div class="card-header">
                    <h3 class="text-center font-weight-light my-4"><span class="fas fa-house-user"></span> Login</h3>
                </div>
                <div class="card-body">
                    <form method="POST" asp-controller="User" asp-action="Login">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Email" class="small mb-1"></label>
                            <input type="email" asp-for="Email" id="inputEmailAddress" class="form-control py-4" placeholder="Enter email address" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Password" class="small mb-1"></label>
                            <input type="password" asp-for="Password" id="inputPassword" class="form-control py-4" placeholder="Enter password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <div class="custom-control custom-checkbox">
                                <input type="checkbox" asp-for="RememberMe" id="rememberPasswordCheck" class="custom-control-input" />
                                <label asp-for="RememberMe" class="custom-control-label"></label>
                            </div>
                        </div>
                        <div class="form-group d-flex align-items-center justify-content-between mt-4 mb-0">
                            <a class="btn btn-secondary text-white"><span class="fas fa-user-lock"></span> Forgot Password?</a>
                            <button class="btn btn-primary"><span class="fas fa-sign-in-alt"></span> Login</button>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center">
                    <a class="btn btn-success btn-block text-white"><span class="fas fa-user-edit"></span> Sign up</a>
                </div>
            </div>
        </div>
    </div>
</div>