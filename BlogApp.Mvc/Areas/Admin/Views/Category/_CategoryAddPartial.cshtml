@model BlogApp.Entities.Dtos.CategoryDtos.CategoryAddDto

<div class="modal" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title"><span class="fa-solid fa-plus"></span> Category Add</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form action="Add" class="category-add-form">
            <div class="form-group">
                <label asp-for="Name" class="form-text"></label>
                <input type="text" asp-for="Name" class="form-control">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="form-text"></label>
                <input type="text" asp-for="Description" class="form-control">
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Note" class="form-text"></label>
                <input type="text" asp-for="Note" class="form-control">
                <span asp-validation-for="Note" class="text-danger"></span>
            </div>
            <div class="form-check">
                <input type="checkbox" asp-for="IsActive" class="form-check-input">
                <label asp-for="IsActive" class="form-check-label"></label>
                <span asp-validation-for="IsActive" class="text-danger"></span>
            </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-warning btn-block"><span class="fa-solid fa-floppy-disk"></span> Save changes</button>
        <button type="button" class="btn btn-danger btn-block" data-dismiss="modal"><span class="fa-solid fa-xmark"></span> Close</button>
      </div>
    </div>
  </div>
</div>