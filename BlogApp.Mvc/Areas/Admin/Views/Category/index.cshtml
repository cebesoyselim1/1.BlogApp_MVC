@using BlogApp.Shared.Utilities.Results.ComplexTypes
@model BlogApp.Entities.Dtos.CategoryDtos.CategoryListDto

@if(Model.ResultStatus == ResultStatus.Success){
    <div id="modalPlaceHolder" aria-hidden="true"></div>
    <div class="card mt-2">
        <div class="card-header">
            <i class="fas fa-table mr-1"></i>
             Categories Table
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="categoriesTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Name</th>
                            <th>Description</th>
                            <th>Is Active?</th>
                            <th>Is Deleted?</th>
                            <th>Notes</th>
                            <th>Created By Name</th>
                            <th>Created Date</th>
                            <th>Modified By Name</th>
                            <th>Modified Date</th>
                        </tr>
                    </thead>

                    <tfoot>
                        <tr>
                            <th>Id</th>
                            <th>Name</th>
                            <th>Description</th>
                            <th>Is Active?</th>
                            <th>Is Deleted?</th>
                            <th>Notes</th>
                            <th>Created By Name</th>
                            <th>Created Date</th>
                            <th>Modified By Name</th>
                            <th>Modified Date</th>
                        </tr>
                    </tfoot>

                    <tbody>
                        @foreach (var category in Model.Categories)
                        {
                            <tr>
                                <td>@category.Id</td>
                                <td>@category.Name</td>
                                <td>@category.Description</td>
                                <td>@category.IsActive</td>
                                <td>@category.IsDeleted</td>
                                <td>@category.Note</td>
                                <td>@category.CreatedName</td>
                                <td>@category.CreatedDate.ToShortDateString()</td>
                                <td>@category.ModifiedName</td>
                                <td>@category.ModifiedDate.ToShortDateString()</td>
                            </tr>
                        }                    
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}else{
    <div class="alert alert-danger mt-4">
        No Categories Found.
    </div>
}

@section Scripts{
    <script>
        $(document).ready( function () {
            $('#categoriesTable').DataTable({
                dom: "<'row'<'col-sm-3'l><'col-sm-6 text-center'B><'col-sm-3'f>>" +
    "<'row'<'col-sm-12'tr>>" +
    "<'row'<'col-sm-5'i><'col-sm-7'p>>",
                buttons: [
                    {
                        text: 'Add',
                        className: "btn btn-success",
                        attr: {
                            id: "btnAdd"
                        },
                        action: function ( e, dt, node, config ) {
                        }
                    },
                    {
                        text: 'Refresh',
                        className: "btn btn-warning",
                        action: function ( e, dt, node, config ) {
                        }
                    }
                ]
            });

            $(function(){
                const modalPlaceHolder = $("#modalPlaceHolder");
                const url = '@Url.Action("Add","Category")';
                $("#btnAdd").click(function(){
                    $.get(url).done(function(data){
                        console.log(data);
                        modalPlaceHolder.html(data);
                        modalPlaceHolder.find(".modal").modal("show");
                    })
                })
            })
        } );
    </script>
}
