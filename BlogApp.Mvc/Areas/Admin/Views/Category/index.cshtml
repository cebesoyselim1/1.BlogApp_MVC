@using BlogApp.Shared.Utilities.Results.ComplexTypes
@model BlogApp.Entities.Dtos.CategoryDtos.CategoryListDto

@if(Model.ResultStatus == ResultStatus.Success){
    <div id="modalPlaceHolder" aria-hidden="true"></div>
    <div class="card mt-2">
        <div class="card-header">
            <i class="fas fa-table mr-1"></i>
             Categories Table
        </div>
        <div class="card-body">
            <div class="spinner-border m-5" id="spinner" role="status" style="display: none;" aria-hidden="true">
                <span class="sr-only">Loading...</span>
            </div>
            <div class="table-responsive">

                <table class="table table-bordered" id="categoriesTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Name</th>
                            <th>Description</th>
                            <th>Is Active?</th>
                            <th>Is Deleted?</th>
                            <th>Notes</th>
                            <th>Created By Name</th>
                            <th>Created Date</th>
                            <th>Modified By Name</th>
                            <th>Modified Date</th>
                            <th></th>
                        </tr>
                    </thead>

                    <tfoot>
                        <tr>
                            <th>Id</th>
                            <th>Name</th>
                            <th>Description</th>
                            <th>Is Active?</th>
                            <th>Is Deleted?</th>
                            <th>Notes</th>
                            <th>Created By Name</th>
                            <th>Created Date</th>
                            <th>Modified By Name</th>
                            <th>Modified Date</th>
                            <th></th>
                        </tr>
                    </tfoot>

                    <tbody>
                        @foreach (var category in Model.Categories)
                        {
                            <tr data-id="category-row-@category.Id">
                                <td>@category.Id</td>
                                <td>@category.Name</td>
                                <td>@category.Description</td>
                                <td>@category.IsActive</td>
                                <td>@category.IsDeleted</td>
                                <td>@category.Note</td>
                                <td>@category.CreatedName</td>
                                <td>@category.CreatedDate.ToShortDateString()</td>
                                <td>@category.ModifiedName</td>
                                <td>@category.ModifiedDate.ToShortDateString()</td>
                                <td>
                                    <button class="btn btn-warning btn-update btn-block" data-id="@category.Id"><span class="fa-solid fa-pen-to-square"></span></button>
                                    <button class="btn btn-danger btn-delete btn-block" data-id="@category.Id"><span class="fa-solid fa-circle-xmark"></span></button>
                                </td>
                            </tr>
                        }                    
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}else{
    <div class="alert alert-danger mt-4">
        No Categories Found.
    </div>
}

@section Scripts{
    <script src="~/js/categoryIndex.js" type="application/ecmascript"></script>
}
